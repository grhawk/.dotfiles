#------------#
#   Prompt   #
#------------#

export reset_=$(tput sgr0)
function exitstatus() {
  if [[ $? == 0 ]]; then
    echo -e "${good}:)${reset_}"
  else
    echo "${bad}:(${reset_}"
  fi
}

function git_string(){
  local     ERR=0
  local    commit=$(tput setaf 160)
  local  clean=$(tput setaf 120)
  local push=$(tput setaf 184)
  local pull=$(tput setaf 166)
  local default_=$(tput setaf 249)
  which git &> /dev/null || ERR=1
  branch=$(git branch 2>/dev/null | grep '*' | tr -d '* '); let ERR+=$?
  status=$(git status 2>/dev/null); let ERR+=$?
  
  if [[ $ERR -gt 0 ]]; then
    echo "$compname"
    return
  fi
  if [[ ! $status =~ "working directory clean" ]]; then
    echo ${commit}$branch${reset_}
    return
  elif [[ $status =~ "have diverged" ]]; then
    echo ${pull}$branch${reset_}
  elif [[ $status =~ "Your branch is ahead of" ]]; then
    echo ${push}$branch${reset_}
    return
  elif [[ $status =~ "nothing to commit" ]]; then
    echo ${clean}$branch${reset_}
    return
  else
    status=${default_}$branch${reset_}
    return
  fi
}

